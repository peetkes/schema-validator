{
  "name": "SchematronModifyTrigger",
  "description": "Trigger that adds collections and permissions to updated schematron file",
  "event": {
    "data-event": {
      "collection-scope": {
        "uri": "/opera/options/schematron"
      },
      "document-content": {
        "update-kind": "modify"
      },
      "when": "post-commit"
    }
  },
  "module": "triggers/schematron-trigger.xqy",
  "module-db": "%%MODULES_DATABASE%%",
  "module-root": "/",
  "enabled": true,
  "recursive": true,
  "task-priority": "normal"
}